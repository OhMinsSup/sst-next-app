{
  "name": "@thread/shared",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    "./assertion": {
      "import": {
        "types": "./dist/assertion.d.ts",
        "default": "./dist/assertion.js"
      },
      "require": {
        "types": "./dist/assertion.d.cts",
        "default": "./dist/assertion.cjs"
      }
    },
    "./password": {
      "import": {
        "types": "./dist/password.d.ts",
        "default": "./dist/password.js"
      },
      "require": {
        "types": "./dist/password.d.cts",
        "default": "./dist/password.cjs"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/utils.d.ts",
        "default": "./dist/utils.js"
      },
      "require": {
        "types": "./dist/utils.d.cts",
        "default": "./dist/utils.cjs"
      }
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "postinstall": "tsup"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "@thread/eslint-config": "workspace:*",
    "@thread/prettier-config": "workspace:*",
    "@thread/tsconfig": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5"
  },
  "prettier": "@thread/prettier-config"
}
